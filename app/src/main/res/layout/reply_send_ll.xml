<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/meg_rpf"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:layout_marginLeft="50dp"
    android:background="@drawable/speech_bubble_nine_patch_user"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:background="#FAFAFA"
       android:layout_marginTop="2dp"
        android:layout_marginLeft="4dp"
        android:orientation="horizontal">

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="#a40404" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FAFAFA"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/user_nnmae_rep_send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Name"
                android:fontFamily="@font/roboto"
                android:textColor="@color/purpul" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:id="@+id/rep_send_v"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:visibility="gone"
                    android:tint="@color/textGray" />

                <TextView
                    android:id="@+id/mesg_reps_send"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textSize="13dp"
                    android:textColor="@color/dd_gray"
                    android:fontFamily="@font/roboto"
                    android:text="message ohhhh" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:paddingTop="5dp">


        <TextView
            android:id="@+id/txtMessage_send_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Hi!!!"
            android:textColor="#242424"
            android:fontFamily="@font/roboto"
            android:autoLink="web"
            android:textSize="16dp"
            android:textIsSelectable="true" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtMessage_send_reply"
            android:gravity="end|bottom"
            android:layout_gravity="end|bottom"
            android:layout_marginLeft="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/timestamp_send_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:padding="5dp"
                android:text="02:30PM"
                android:textColor="#9b9b9b"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/msg_sent_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|end"
                android:padding="5dp"
                />

            <ImageView
                android:id="@+id/msg_viewd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|end"
                android:padding="5dp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>