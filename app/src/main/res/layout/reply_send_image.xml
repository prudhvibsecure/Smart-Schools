<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/meg_rpf"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="70dp"
    android:layout_gravity="end"
    android:background="@drawable/left_img_back"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#FAFAFA"
        android:orientation="horizontal">

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="#a40404" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FAFAFA"
            android:orientation="horizontal"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/r_img_rep_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="Name"
                    android:textColor="@color/purpul" />

                <TextView
                    android:id="@+id/reps_send_img_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:text="message ohhhh" />
            </LinearLayout>

            <ImageView
                android:id="@+id/rep_send_img_d"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_change_camera" />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/send_repl_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:scaleType="centerCrop"
            android:layout_margin="5dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="end|bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/timerp_send_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end|center"
                android:padding="5dp"
                android:text="02:30PM"
                android:textColor="#9b9b9b"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/re_sent_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|end|bottom"
                android:padding="5dp"
                android:src="@mipmap/message_got_receipt_from_server" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>