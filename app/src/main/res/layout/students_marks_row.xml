<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_list_main_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_cls"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_user_icon" />

        <CheckBox
            android:id="@+id/chk_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/img_cls"
            android:layout_alignRight="@+id/img_cls"
            android:layout_alignBottom="@+id/img_cls"
            android:layout_gravity="center"
            android:background="@drawable/cust_check"
            android:button="@android:color/transparent"
            android:gravity="end|bottom|right" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/cl_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:padding="8dp"
            android:singleLine="true"
            android:text="Class Name"
            android:textSize="8pt" />

        <TextView
            android:id="@+id/roll_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:padding="8dp"
            android:text="R.No"
            android:textColor="@color/red"
            android:textSize="7pt" />

        <EditText
            android:id="@+id/marks_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_weight=".3"
            android:background="@drawable/t_shape"
            android:clickable="false"
            android:cursorVisible="false"
            android:editable="false"
            android:focusable="false"
            android:gravity="center"
            android:hint="NA"
            android:inputType="number"
            android:maxLength="3"
            android:padding="8dp" />


    </LinearLayout>

</LinearLayout>