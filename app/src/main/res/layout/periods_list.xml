<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="4">

    <TextView
        android:id="@+id/num"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="num"
        android:padding="8dp"
        android:background="@drawable/v_rectangle"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/from"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="from"
        android:padding="8dp"
        android:background="@drawable/v_rectangle"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/to"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="to"
        android:padding="8dp"
        android:background="@drawable/v_rectangle"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="name"
        android:padding="8dp"
        android:background="@drawable/v_rectangle"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:gravity="center"/>

</LinearLayout>