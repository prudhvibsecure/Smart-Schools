<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/view_list_repo_action_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="2dp">

        <TextView
            android:id="@+id/view_list_repo_action_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/green"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="Attendance"
            android:textSize="12sp"
            android:visibility="gone"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/view_list_repo_action_status"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:padding="10dp"
            android:layout_weight="1"
            android:text="Marks"
            android:textSize="12sp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/view_list_repo_action_update"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="Accept"
            android:textSize="12sp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/view_list_repo_action_per"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/red"
            android:gravity="center"
            android:padding="10dp"
            android:layout_weight="1"
            android:text="Performance"
            android:visibility="gone"
            android:textSize="12sp"
            android:textColor="@android:color/white" />
        <TextView
            android:id="@+id/view_list_repo_action_more"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/red"
            android:gravity="center"
            android:padding="10dp"
            android:layout_weight="1"
            android:text="Decline"
            android:textSize="12sp"
            android:drawablePadding="5dp"
            android:textColor="@android:color/white" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:id="@+id/view_list_main_content"
        android:background="@color/white"
        android:padding="5dp">

       <!-- <TextView
            android:id="@+id/message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".70"
            android:gravity="start"
            android:text="this is testing text for approval message in the schools communication system"
            android:padding="0dp"
            android:layout_marginEnd="10dp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:padding="0dp"
            />

        <TextView
            android:id="@+id/status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".30"
            android:gravity="center"
            android:text="Pending"
            android:layout_gravity="center"
            android:padding="0dp"/>-->

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text=""
            android:padding="10dp"
           />

    </LinearLayout>

</FrameLayout>