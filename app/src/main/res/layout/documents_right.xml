<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="70dp"
    android:layout_marginRight="8dp"
    android:layout_gravity="end"
    android:background="@drawable/left_img_back"
    android:orientation="vertical">

    <TextView
        android:id="@+id/fd_doc_lt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/ic_forward"
        android:drawablePadding="5dp"
        android:paddingLeft="5dp"
        android:text="Forward"
        android:drawableTint="@color/colorPrimary"
        android:visibility="gone" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/doc_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="2dp"
                android:src="@android:drawable/ic_input_get" />

            <TextView
                android:id="@+id/doc_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:gravity="center"
                android:padding="8dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/transparent_black"
                android:fontFamily="@font/roboto"
                android:paddingLeft="5dp"
                android:text="doc name" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:orientation="horizontal"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/timestamp_doc_sent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="11:15 PM"
                android:textSize="9sp" />

            <ImageView
                android:id="@+id/doc_msg_sent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:paddingBottom="3dp"
                android:visibility="gone"
                android:src="@mipmap/message_got_receipt_from_server" />

        </LinearLayout>
    </FrameLayout>

</LinearLayout>