<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/meg_rpf"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="60dp"
    android:background="@drawable/bubble_case_v"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tk_name_rc_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:paddingLeft="15dp"
        android:text="Raj"
        android:textColor="@color/bs_dark_blue"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"
        android:background="#FAFAFA"
        android:orientation="horizontal">

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="#a40404" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/user_nnmae"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text="You"
                android:fontFamily="@font/roboto"
                android:textColor="@color/purpul" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp">

                <ImageView
                    android:id="@+id/rec_rp_type"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:tint="@color/textGray"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/mesg_reps_reply"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textSize="13dp"
                    android:textColor="@color/dd_gray"
                    android:fontFamily="@font/roboto"
                    android:text="message ohhhh" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/rec_img_pic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/txtMessage_send_rec_rep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:paddingLeft="5dp"
            android:text="Hi Amar!!!"
            android:textColor="#000"
            android:textSize="16dp"
            android:fontFamily="@font/roboto"
            android:textIsSelectable="true" />


        <TextView
            android:id="@+id/timestamp_send_rp_t"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:padding="5dp"
            android:text="02:30PM"
            android:textColor="#9b9b9b"
            android:textSize="10sp" />
    </LinearLayout>

</LinearLayout>