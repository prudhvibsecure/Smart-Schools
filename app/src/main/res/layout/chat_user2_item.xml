<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <FrameLayout
        android:id="@+id/outgoing_layout_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/speech_bubble_nine_patch_user"
        android:padding="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/timestamp_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="11:15 PM"
                android:textColor="@color/textGray"
                android:textSize="9sp" />

            <ImageView
                android:id="@+id/msg_sent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:paddingBottom="3dp"
                android:visibility="gone"
                android:src="@mipmap/message_got_receipt_from_server" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fd_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_forward"
                android:drawablePadding="5dp"
                android:text="Forward"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txtMessage_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:autoLink="web"

                android:fontFamily="@font/roboto"
                android:paddingRight="6dp"
                android:text="Hi"
                android:textColor="@color/transparent_black"
                android:textSize="16dp" />
        </LinearLayout>

    </FrameLayout>

</RelativeLayout>